<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <TextView
        android:id="@+id/startTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="슝슝이 님이 보고싶은 영화"
        android:layout_marginTop="30px"
        android:layout_marginHorizontal="15dp"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:background="#FCE1E1E1"
        android:fontFamily="@font/nanumbarungothic" />

            <RelativeLayout
                android:id="@+id/startMoive"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_margin="15dp"
                android:layout_weight="1"
                android:gravity="center"
                android:background="#EEEEEE">

                <ImageView
                    android:id="@+id/image1"
                    android:layout_width="100dp"
                    android:layout_height="120dp"
                    android:background="#EEEEEE"/>
                <TextView
                    android:id="@+id/text1"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:layout_toRightOf="@id/image1"
                    android:gravity="center"
                    android:background="#EEEEEE"/>

                <ImageView
                    android:id="@+id/image2"
                    android:layout_width="100dp"
                    android:layout_height="120dp"
                    android:layout_below="@+id/image1"
                    android:background="#EEEEEE"/>

                <TextView
                    android:id="@+id/text2"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:layout_toRightOf="@id/image2"
                    android:layout_below="@id/text1"
                    android:gravity="center"
                    android:background="#EEEEEE"/>

            </RelativeLayout>


    <View
        android:layout_width="wrap_content"
        android:layout_height="3dp"
        android:layout_marginHorizontal="8dp"
        android:background="@color/black"/>

    <TextView
        android:id="@+id/finishTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="슝슝이 님이 본 영화"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="15dp"
        android:textSize="20dp"
        android:background="#EEEEEE"
        android:textColor="@color/black" />

        <RelativeLayout
            android:id="@+id/FinishedMovie"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_margin="15dp"
            android:layout_weight="1"
            android:gravity="center"
            android:background="#EEEEEE">

            <ImageView
                android:id="@+id/image11"
                android:layout_width="100dp"
                android:layout_height="120dp"
                android:background="#EEEEEE"/>
            <TextView
                android:id="@+id/text11"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_toRightOf="@id/image11"
                android:gravity="center"
                android:background="#EEEEEE"/>

            <ImageView
                android:id="@+id/image22"
                android:layout_width="100dp"
                android:layout_height="120dp"
                android:layout_below="@+id/image11"
                android:background="#EEEEEE"/>

            <TextView
                android:id="@+id/text22"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_toRightOf="@id/image22"
                android:layout_below="@id/text11"
                android:gravity="center"
                android:background="#EEEEEE"/>

        </RelativeLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        style="@style/Widget.MaterialComponents.BottomNavigationView.Colored"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:menu="@menu/bottom_navigation_menu"
        android:background="#4A4A4A"/>

</LinearLayout>